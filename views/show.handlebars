<header class="page-header">
  <a href="/posts/{{ post.id }}/edit" class="btn btn-primary">Edit</a>
</header>


<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Source</th>
      <th>Type</th>
      <th>2nd Type</th>
      <th>3rd Type</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><a href={{ post.article_url }}>{{post.title}}</a></td>
      <td>{{ post.body }}</td>
      <td>{{ post.source }}</td>
      <td>{{ post.type }}</td>
      <td>{{ post.type2 }}</td>
      <td>{{ post.type3 }}</td>
      <td>{{ post.Notes }}</td>
    </tr>
  </tbody>
</table>

<div style="width:500px">
<form action="/comments/{{post.id}}" method="post">
  <div class="form-group">
    <label for="comment_body">Comment Here!</label>
    <input type="text" id="comment_body" name="comment[body]" class="form-control">
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>
</div>


    {{#each post.comments as |child|}}
    <div class="container" style="margin-left: 50px;width:500px">
      <div class="row">
        <div class="col-md-2"><strong>Author: </strong>{{child.author.username}}</div>
        <div class="col-md-10"><strong>Body: </strong>{{ child.body }}</div>
      </div>

      <form action="/comments/{{child.id}}" method="post">
        <div class="form-group">
        <label for="comment_body">Comment Here!</label>
        <input type="text" id="comment_body" name="comment[body]" class="form-control">
        </div>

        <div class="form-group">
        <input type="submit" class="btn btn-primary">
        </div>
      </form>
      </div>

{{/each}}
